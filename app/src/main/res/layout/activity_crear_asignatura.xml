<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AppClass.Decano.crear_asignatura">

    <TextView
        android:id="@+id/text_crear_asignatura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/roboto_bold"
        android:text="CREAR ASIGNATURA"
        android:textColor="#707070"
        android:textColorHighlight="#707070"
        android:textColorLink="#707070"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_nombre_asignatura"
        android:layout_width="328dp"
        android:layout_height="56dp"
        android:layout_marginTop="44dp"
        android:backgroundTint="@android:color/holo_red_dark"
        android:contentDescription="Nombre de la Asignatura"
        android:ems="10"
        android:hint="Nombre de la Asignatura"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_crear_asignatura" />

    <EditText
        android:id="@+id/et_credito_asignatura"
        android:layout_width="328dp"
        android:layout_height="56dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="@android:color/holo_red_dark"
        android:contentDescription="Numero de Creditos"
        android:ems="10"
        android:hint="Numero de Creditos"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_nombre_asignatura" />

    <Button
        android:id="@+id/btn_registrar"
        android:layout_width="166dp"
        android:layout_height="36dp"
        android:layout_marginTop="30dp"
        android:background="#BF0411"
        android:fontFamily="@font/roboto_bold"
        android:onClick="crearAsignatura"
        android:text="Crear Asignatura"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_credito_asignatura" />
</androidx.constraintlayout.widget.ConstraintLayout>