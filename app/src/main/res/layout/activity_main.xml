<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="294dp"
        android:layout_height="121dp"
        android:layout_marginTop="53dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/text_semana"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="74dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Iniciar Sesión"
        android:textColor="#BF0411"
        android:textColorHighlight="#BF0411"
        android:textColorLink="#BF0411"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <EditText
        android:id="@+id/et_correo"
        android:layout_width="328dp"
        android:layout_height="56dp"
        android:layout_marginTop="55dp"
        android:backgroundTint="@android:color/holo_red_dark"
        android:ems="10"
        android:hint="Correo"
        android:inputType="textPersonName"
        android:textColorHighlight="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_semana" />

    <EditText
        android:id="@+id/et_pass"
        android:layout_width="328dp"
        android:layout_height="56dp"
        android:layout_marginTop="28dp"
        android:contentDescription="Contraseña"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="Contraseña"
        android:backgroundTint="@android:color/holo_red_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_correo" />

    <Button
        android:id="@+id/button"
        android:layout_width="93dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:background="#BF0411"
        android:fontFamily="@font/roboto_bold"
        android:onClick="ingresar"
        android:text="INGRESAR"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_pass" />

</androidx.constraintlayout.widget.ConstraintLayout>