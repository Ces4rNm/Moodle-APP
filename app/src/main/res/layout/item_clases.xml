<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="290dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="274dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_id_clase"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="23dp"
                    android:layout_marginTop="13.5dp"
                    android:layout_marginBottom="10dp"
                    android:scrollbarSize="19dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="ID Clase: X"
                    android:textSize="32sp" />

                <TextView
                    android:id="@+id/text_nombre_clase"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="23dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Nombre Asignatura"
                    android:textSize="19sp" />
                <TextView
                    android:id="@+id/text_creditos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="23dp"
                    android:layout_marginBottom="15dp"
                    android:text="Creditos: X"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/text_nombre_docente"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="23dp"
                    android:layout_marginBottom="15dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Docente: X"
                    android:textSize="19sp" />
                <TextView
                    android:id="@+id/text_asistencia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="23dp"
                    android:layout_marginBottom="15dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Asistencia: X"
                    android:textSize="19sp" />
                <TextView
                    android:id="@+id/text_titulo_descripcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="23dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Descripcion:"
                    android:textSize="19sp" />
                <TextView
                    android:id="@+id/text_descripcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="23dp"
                    android:layout_marginBottom="15dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="XXXX"
                    android:textSize="15sp" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
