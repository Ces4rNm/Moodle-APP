<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".verificar_gps">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="294dp"
        android:layout_height="121dp"
        android:layout_marginTop="53dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/text_semana"
        android:layout_width="260dp"
        android:layout_height="197dp"
        android:layout_marginTop="53dp"
        android:fontFamily="@font/roboto_bold"
        android:lineSpacingExtra="12sp"
        android:text="Por favor, activar el GPS de su dispositivo para poder continuar"
        android:textAlignment="center"
        android:textColor="#BF0411"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/button"
        android:layout_width="131dp"
        android:layout_height="36dp"
        android:layout_marginTop="63dp"
        android:background="#BF0411"
        android:fontFamily="@font/roboto_bold"
        android:onClick="confirmar"
        android:text="VERIFICAR GPS"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_semana" />

</androidx.constraintlayout.widget.ConstraintLayout>